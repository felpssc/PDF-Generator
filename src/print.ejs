<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Relatório</title>

    <link href="https://unpkg.com/tailwindcss/dist/tailwind.min.css" rel="stylesheet">

    <style>
      table {
        width: 50%;
        margin: 0 auto;
      }

      th, td {
        padding: 5px;
        text-align: left;
      }
    </style>
  </head>
  <body class="bg-purple-100">
    <div>
      <br><h1 align="center" class="text-3xl">Lista de passageiros</h1><br>
      <table class="table-auto border border-green-600">
        <thead>
          <tr>
            <th class="border border-green-600">Nome</th>
            <th class="border border-green-600">Número do voo</th>
            <th class="border border-green-600">Horário</th>
          </tr>
        </thead>
        <tbody>
          <% if (passengers.length > 0) { %> <% passengers.forEach(passenger =>
          { %>
          <tr>
            <td class="border border-green-600"><%= passenger.name %></td>
            <td class="border border-green-600"><%= passenger.flightNumber %></td>
            <td class="border border-green-600"><%= passenger.time %></td>
          </tr>
          <% }); %> <% } %>
        </tbody>
        <tfoot>
          <tr>
            <td class="border border-green-600" colspan="2">Total de passageiros: </td>
            <td class="border border-green-600" colspan="2"><%= passengers.length %></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </body>
</html>
